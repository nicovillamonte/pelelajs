{
  "scopeName": "text.html.pelela",
  "name": "Pelela Template",
  "injectionSelector": "L:text.html",
  "patterns": [
    {
      "include": "#pelela-tag"
    },
    {
      "include": "#pelela-attributes"
    },
    {
      "include": "text.html.basic"
    }
  ],
  "repository": {
    "pelela-tag": {
      "patterns": [
        {
          "name": "meta.tag.pelela.custom",
          "begin": "<\\s*(pelela)\\b",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag.pelela.custom"
            }
          },
          "end": ">",
          "patterns": [
            {
              "include": "#pelela-tag-attributes"
            },
            {
              "include": "text.html.basic#attribute"
            }
          ]
        },
        {
          "name": "meta.tag.pelela.custom",
          "begin": "<\\/\\s*(pelela)\\b",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag.pelela.custom"
            }
          },
          "end": ">"
        }
      ]
    },
    "pelela-attributes": {
      "patterns": [
        {
          "name": "meta.attribute.pelela.viewmodel",
          "begin": "\\b(view-model)\\b\\s*=\\s*",
          "beginCaptures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.viewmodel"
            }
          },
          "end": "(?=\\s|/?>)",
          "patterns": [
            {
              "include": "#pelela-attribute-value"
            }
          ]
        },
        {
          "name": "meta.attribute.pelela.binding",
          "begin": "\\b(bind-[A-Za-z0-9_\\-]+)\\b\\s*=\\s*",
          "beginCaptures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.binding"
            }
          },
          "end": "(?=\\s|/?>)",
          "patterns": [
            {
              "include": "#pelela-attribute-value"
            }
          ]
        },
        {
          "name": "meta.attribute.pelela.click",
          "begin": "\\b(click)\\b\\s*=\\s*",
          "beginCaptures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.click"
            }
          },
          "end": "(?=\\s|/?>)",
          "patterns": [
            {
              "include": "#pelela-attribute-value"
            }
          ]
        }
      ]
    },
    "pelela-tag-attributes": {
      "patterns": [
        {
          "include": "#pelela-attributes"
        }
      ]
    },
    "pelela-attribute-value": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.pelela"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.pelela"
            }
          },
          "patterns": [
            {
              "name": "variable.other.readwrite.pelela",
              "match": "[^\"]+"
            }
          ]
        },
        {
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.pelela"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.pelela"
            }
          },
          "patterns": [
            {
              "name": "variable.other.readwrite.pelela",
              "match": "[^']+"
            }
          ]
        }
      ]
    }
  }
}